<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <com.google.android.material.button.MaterialButton
        android:id="@+id/profile"
        style="@style/Widget.MaterialComponents.Button.TextButton"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="26dp"
        android:drawableLeft="@drawable/fragment_more_ic_profile"
        android:paddingStart="10dp"
        android:text="Профиль"
        android:textAlignment="textStart"
        android:textAllCaps="false"
        android:textColor="#23325C"
        android:textSize="16sp"
        app:iconPadding="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/share"
        style="@style/Widget.MaterialComponents.Button.TextButton"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="16dp"
        android:drawableLeft="@drawable/fragment_more_ic_share"
        android:paddingStart="10dp"
        android:text="Поделиться"

        android:textAlignment="textStart"
        android:textAllCaps="false"
        android:textColor="#23325C"
        android:textSize="16sp"
        app:iconPadding="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/profile" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/question"
        style="@style/Widget.MaterialComponents.Button.TextButton"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="16dp"
        android:drawableLeft="@drawable/fragment_more_ic_messagequestion"
        android:paddingStart="10dp"
        android:text="Задать вопрос"
        android:textAlignment="textStart"

        android:textAllCaps="false"
        android:textColor="#23325C"
        android:textSize="16sp"
        app:iconPadding="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/share" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/site"
        style="@style/Widget.MaterialComponents.Button.TextButton"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="16dp"
        android:drawableLeft="@drawable/fragment_more_ic_site"
        android:paddingStart="10dp"
        android:text="Сайт"
        android:textAlignment="textStart"
        android:textAllCaps="false"

        android:textColor="#23325C"
        android:textSize="16sp"
        app:iconPadding="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/question" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/logout"
        style="@style/Widget.MaterialComponents.Button.TextButton"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="16dp"
        android:drawableLeft="@drawable/fragment_more_ic_logout"
        android:paddingStart="10dp"
        android:text="Выйти"
        android:textAlignment="textStart"
        android:textAllCaps="false"
        android:textColor="#23325C"
        android:textSize="16sp"
        app:iconPadding="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/site" />

</androidx.constraintlayout.widget.ConstraintLayout>
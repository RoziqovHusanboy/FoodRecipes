<?xml version="1.0" encoding="utf-8"?>
<navigation
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    app:startDestination="@id/splashScreenFragment">

    <fragment
        android:id="@+id/homeFragment"
        android:name="android.kurs.foodrecipes.presentation.home.HomeFragment"
        android:label="fragment_home"
        tools:layout="@layout/fragment_home" >
        <action
            android:id="@+id/action_homeFragment_to_detailFragment"
            app:destination="@id/detailFragment" />
        <action
            android:id="@+id/action_homeFragment_to_searchFragment"
            app:destination="@id/searchFragment" />
        <action
            android:id="@+id/action_homeFragment_to_profileFragment"
            app:destination="@id/profileFragment" />
        <action
            android:id="@+id/action_homeFragment_to_productFragment"
            app:destination="@id/productFragment">
            <argument android:name="title"
                app:argType="string"/>
        </action>


    </fragment>
    <fragment
        android:id="@+id/SignInFragment"
        android:name="android.kurs.foodrecipes.presentation.sign_in.SignInFragment"
        android:label="SignInFragment"
        tools:layout="@layout/fragment_sign__in_"
        >
        <action
            android:id="@+id/to_homeFragment"
            app:destination="@id/homeFragment"
            app:popUpTo="@id/SignInFragment"
            app:popUpToInclusive="true" />
        <action
            android:id="@+id/to_signUpFragment"
            app:destination="@id/signUpFragment" />
        <action
            android:id="@+id/to_forgotFragment"
            app:destination="@id/forgotFragment" />
    </fragment>

    <action
        android:id="@+id/signInFragment"
        app:destination="@+id/SignInFragment"
        app:popUpTo="@id/main"/>

    <fragment
        android:id="@+id/signUpFragment"
        android:name="android.kurs.foodrecipes.presentation.sign_up.SignUpFragment"
        android:label="SignUpFragment"
        tools:layout="@layout/fragment_sign__up_"
        >
        <action
            android:id="@+id/to_signInFragment"
            app:destination="@id/SignInFragment" />
    </fragment>
    <fragment
        android:id="@+id/forgotFragment"
        android:name="android.kurs.foodrecipes.presentation.sign_in.ForgotFragment"
        android:label="ForgotFragment"
        tools:layout="@layout/fragment_login_reset"
        />
    <fragment
        android:id="@+id/detailFragment"
        android:name="android.kurs.foodrecipes.presentation.detail_home.DetailFragment"
        android:label="detailFragment"
        tools:layout="@layout/fragment_detail">

        <argument
            android:name="id"
            app:argType="integer"/>

    </fragment>
    <fragment
        android:id="@+id/searchFragment"
        android:name="android.kurs.foodrecipes.presentation.search.SearchFragment"
        android:label="SearchFragment"
        tools:layout="@layout/fragment_search"
        />
    <fragment
        android:id="@+id/mapFragment"
        android:name="android.kurs.foodrecipes.presentation.map.MapFragment"
        android:label="MapFragment"
        tools:layout="@layout/fragment_map"
        />
    <fragment
        android:id="@+id/settingFragment"
        android:name="android.kurs.foodrecipes.presentation.setting.SettingFragment"
        android:label="SettingFragment"
        tools:layout="@layout/fragment_setting"
        >
        <action
            android:id="@+id/action_settingFragment_to_profileFragment"
            app:destination="@id/profileFragment" />
    </fragment>
    <fragment
        android:id="@+id/profileFragment"
        android:name="android.kurs.foodrecipes.presentation.profile.ProfileFragment"
        android:label="ProfileFragment"
        tools:layout="@layout/fragment_profile"
        />
    <fragment
        android:id="@+id/splashScreenFragment"
        android:name="android.kurs.foodrecipes.presentation.splash.SplashScreenFragment"
        android:label="SplashScreenFragment"
        tools:layout="@layout/fragment_splash_screen"
        >
        <action
            android:id="@+id/action_splashScreenFragment_to_SignInFragment"
            app:destination="@id/SignInFragment" />
        <action
            android:id="@+id/action_splashScreenFragment_to_onboardingFragment"
            app:destination="@id/onboardingFragment" />
    </fragment>

    <fragment
        android:id="@+id/productFragment"
        android:name="android.kurs.foodrecipes.presentation.product.ProductFragment"
        android:label="ProductFragment"
        tools:layout="@layout/fragment_product"
        >
        <action
            android:id="@+id/action_productFragment_to_detailProductFragment"
            app:destination="@id/detailProductFragment">
            <argument android:name="id"
                app:argType="string"/>
        </action>
    </fragment>
    <fragment
        android:id="@+id/detailProductFragment"
        android:name="android.kurs.foodrecipes.presentation.detail_product.DetailProductFragment"
        android:label="DetailProductFragment"
        tools:layout="@layout/fragment_product_detail"
        />
    <fragment
        android:id="@+id/cartFragment"
        android:name="android.kurs.foodrecipes.presentation.cart.CartFragment"
        android:label="CartFragment"
        tools:layout="@layout/fragment_cart"
        />
    <fragment
        android:id="@+id/onboardingFragment"
        android:name="android.kurs.foodrecipes.presentation.onboarding.OnboardingFragment"
        android:label="OnboardingFragment"
        tools:layout="@layout/fragment_onboarding"
        >
        <action
            android:id="@+id/action_onboardingFragment_to_SignInFragmetn"
            app:destination="@id/SignInFragment" />
    </fragment>


</navigation>